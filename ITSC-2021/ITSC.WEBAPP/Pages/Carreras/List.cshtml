@page
@model ITSC.WebApp.Pages.Carreras.ListModel
@{
}

<div class="container">
    @if (Model.mensaje != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <button type="button" class="btn-close close" data-bs-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.mensaje.
        </div>
    }
    <section>
        <a asp-page="./Edit" class="btn btn-primary">Cargar Carrera</a>
        <!--El buscador-->
        <form>
            <div class="input-group mt-2 mb-2">

                <div class="input-group">
                    <input class="form-control" asp-for="strBusqueda" />
                    <button type="submit" class="btn btn-outline-secondary"><i class="bi bi-search"></i></button>
                </div>
            </div>
        </form>
    </section>

    <section>
        <!--La grilla de Carreras-->
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <td>Carrera</td>
                    <td>Plan</td>
                    <td>Desde</td>
                    <td>Hasta</td>
                    <td colspan="3">Acciones</td>
                </tr>
            </thead>
            @foreach (var c in Model.carreras)
            {
                <tr>
                    <td>@c.descripcion</td>
                    <td>@c.plan</td>
                    <td>@c.plan_start_date.ToString("dd/MM/yyyy")</td>
                    <td>@c.plan_end_date.ToString("dd/MM/yyyy")</td>
                    <td>
                        <a asp-page="./Edit"
                           asp-route-carreraId="@c.id"><i class="bi bi-pencil-square"></i></a>
                    </td>
                    <td>
                        <a asp-page="./Delete"
                           asp-route-carreraId="@c.id">
                            <i class="bi bi-trash"></i>
                        </a>
                    </td>
                    <td>
                        <a asp-page="./Detail"
                           asp-route-carreraId="@c.id"><i class="bi bi-box-arrow-in-right"></i></a>
                    </td>
                </tr>
            }
        </table>
    </section>

</div>