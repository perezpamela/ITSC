@page

@model ITSC.WebApp.Pages.Alumnos.ListModel

<div class="container-fluid">
    @if (Model.Mensaje != null)
    {
        <div class="alert alert-success alert-dismissible" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
            @Model.Mensaje
        </div>

    }

    <a asp-page="./Edit" class="btn btn-primary">Cargar Alumno</a>
    <a asp-page="./Import" class="btn btn-primary">Importar Alumnos</a>
    <form method="get" class="mt-1">
        <div class="input-group">
            <input class="form-control" asp-for="strBusqueda" />
            <button type="submit" class="btn btn-outline-secondary"><i class="bi bi-search"></i></button>
        </div>
    </form>
    <table class="table table-striped table-hover">
        <thead class="table-dark">
            <tr>
                <td>NOMBRE COMPLETO</td>
                <td>DNI</td>
                <td>ACCIONES</td>
                <td></td>
                <td></td>
            </tr>
        </thead>

        @foreach (var a in @Model.alumnos)
        {
            <tr>
                <td>@a.apellido, @a.nombre</td>
                <td>@a.dni</td>
                <td>
                    <a asp-page="./Edit"
                       asp-route-alumnoId="@a.id"><i class="bi bi-pencil-square"></i></a>
                </td>
                <td>
                    <a asp-page="./Delete"
                       asp-route-alumnoId="@a.id">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
                <td>
                    <a asp-page="./Detail"
                       asp-route-alumnoId="@a.id"><i class="bi bi-box-arrow-in-right"></i></a>
                </td>
            </tr>



        }

    </table>
    

</div>

    
